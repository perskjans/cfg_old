#!/bin/bash

. ~/bin/git.conf
. ~/bin/gitrepostatus

result=$(git clone $* 2>&1)

if [[ $result =~ fatal ]]; then
    echo -e ${RED}${result}${RESET}
    exit 1
fi

echo -e ${GREEN}${result}${RESET}

dir=$(echo $result | cut -d' ' -f6)

echo $dir | sed "s/\/\.git\///g" >> $reposfile

repostatus

. ~/.bashrc
