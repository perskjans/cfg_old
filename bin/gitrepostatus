#!/bin/sh

. ~/bin/git.conf

repostatus()
{
    reposfile_tmp=$reposfile\_tmp
    cat $reposfile | sort | uniq > $reposfile_tmp
    dirs=$(cat $reposfile_tmp)

    rm -f $reposfile
    touch $reposfile

    for dir in $dirs;
    do
        if [ -d $dir ]; then
            echo $dir >> $reposfile
        fi
    done

    rm -f $reposfile_tmp
}
