###
### This file is sourced by .profile
###
### Content is stuff specific for Debian based Linux distros
###

export DISTRO_TYPE=debian

## Set up functions for package manager

pm()
{
    sudo apt $*
}

pi()
{
    sudo apt install $*
}

pr()
{
    sudo apt remove $*
}

pc()
{
    sudo apt clean$*
}

pu()
{
    sudo apt update && sudo apt upgrade
}

pq()
{
    dpkg -l $*
}

pqr()
{
    sudo apt search $*
}

prd()
{
    sudo apt autoremove $*
}

export -f pm
export -f pi
export -f pr
export -f pc
export -f pu
export -f pq
export -f pqr
export -f prd

