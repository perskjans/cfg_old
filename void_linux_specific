###
### This file is sourced by .profile
###
### Content is stuff specific for Void Linux
###

export DISTRO_TYPE=void

## Set up functions for package manager

pm()
{
    sudo xbps-install $*
}

pi()
{
    sudo xbps-install -S $*
}

pr()
{
    sudo xbps-remove -R $*
}

pc()
{
    sudo xbps-remove -Oo $*
}

pu()
{
    sudo xbps-install -Su $*
}

pq()
{
    xbps-query -l $*
}

pqr()
{
    sudo xbps-query -Rl $*
}

prd()
{
    sudo xbps-remove -Oo $*
}

export -f pm
export -f pi
export -f pr
export -f pc
export -f pu
export -f pq
export -f pqr
export -f prd

