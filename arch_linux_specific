###
### This file is sourced by .profile
###
### Content is stuff specific for Arch based Linux distros
###

export DISTRO_TYPE=arch

## Set up functions for package manager

pm()
{
    sudo pacman $*
}

pi()
{
    sudo pacman -S $*
}

pr()
{
    sudo pacman -Rs $*
}

pc()
{
    sudo pacman -Scc $*
}

pu()
{
    sudo pacman -Syu $*
}

pq()
{
    sudo pacman -Q $*
}

pqr()
{
    sudo pacman -Ss $*
}

prd()
{
    sudo pacman -Qdtq | pacman -Rs - $*
}

export -f pm
export -f pi
export -f pr
export -f pc
export -f pu
export -f pq
export -f pqr
export -f prd

